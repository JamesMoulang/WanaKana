{
  "env": {
    "test": {
      "presets": ["env"]
    },
    "es": {
      "presets": [
        [
          "env",
          {
            "loose": true,
            "modules": false,
            "useBuiltIns": "usage",
            "targets": {
              "node": true
            }
          }
        ]
      ]
    },
    "cjs": {
      "presets": [
        [
          "env",
          {
            "loose": true,
            "useBuiltIns": "usage",
            "targets": {
              "node": "8"
            }
          }
        ]
      ]
    },
    "rollup": {
      "presets": [
        [
          "env",
          {
            "modules": false,
            "useBuiltIns": "entry",
            "targets": {
              "browsers": ["last 2 versions", "> 1%", "not IE < 11"]
            }
          }
        ]
      ],
      "plugins": ["external-helpers"]
    }
  }
}
